<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="512" Width="1024"
        ResizeMode="NoResize" 
        >
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20">
            </ColumnDefinition>
            
            <ColumnDefinition >
            </ColumnDefinition>
            
            <ColumnDefinition>
            </ColumnDefinition>
            
            <ColumnDefinition Width="20">
            </ColumnDefinition>
            
            <ColumnDefinition>
            </ColumnDefinition>
            
            <ColumnDefinition Width="20">
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="20">

            </RowDefinition>
            <RowDefinition>

            </RowDefinition>
            <RowDefinition>

            </RowDefinition>
            <RowDefinition>
                
            </RowDefinition>
            <RowDefinition Height="20">

            </RowDefinition>
        </Grid.RowDefinitions>

        <Grid.Background>
            <ImageBrush x:Name="backgroundIMG" ImageSource="/Images/Sun.png">

            </ImageBrush>
        </Grid.Background>

        <Label x:Name="labelCity" Grid.Column="1"  Grid.Row="1" Content="City" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="70" FontFamily="Georgia"  Foreground="White">
            <Label.Effect>
                <DropShadowEffect ShadowDepth="5" BlurRadius="2" Opacity="0.95"/>
            </Label.Effect>
        </Label>

        <Label x:Name="labelTemperature" Grid.Column="1"  Grid.Row="2" Content="Temp" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="80" FontFamily="Georgia" FontWeight="Bold" Foreground="White">
            <Label.Effect>
                <DropShadowEffect ShadowDepth="5" BlurRadius="2" Opacity="0.95"/>
            </Label.Effect>
        </Label>

        <Label x:Name="labelInfo" Grid.Column="1"  Grid.Row="3" Content="Info" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="50" FontFamily="Georgia"  Foreground="White">
            <Label.Effect>
                <DropShadowEffect ShadowDepth="5" BlurRadius="2" Opacity="0.95"/>
            </Label.Effect>
        </Label>
    </Grid>
</Window>
